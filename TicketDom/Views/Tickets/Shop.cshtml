@model IEnumerable<TicketDom.Models.Tickets>

@{
    ViewBag.Title = "Shop";
}

<h2>Shop</h2>
<p>Search for keywords below</p>
@using (Html.BeginForm())
{

    <input type="text" name="keyword" />
    <input type="submit" value="search" />
}
<table class="table" cellspacing="0">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Venue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Seat)
        </th>
        <th></th>
    </tr>

    @if (Model != null)
    {

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    $@item.Price.ToString("0.00")
                </td>
                <td>
                    @item.Date.ToString("MM/dd/yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                @if (item.Seating)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Seat)
                    </td>
                }
                else
                {
                    <td>N/A</td>
                }
                <td>
                    
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) 
               
                </td>
                
            </tr>
            
        }
    }

</table>
